{
  "name": "transiett-monorepo",
  "private": true,
  "workspaces": [
    "server",
    "client/transiett-voucher"
  ],
  "scripts": {
    "dev": "concurrently -n db,server,client -c yellow,green,blue \"npm:db:up\" \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "npm --workspace server run dev",
    "dev:client": "npm --workspace client/transiett-voucher run dev",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "build": "npm --workspace server run build && npm --workspace client/transiett-voucher run build",
    "start": "concurrently -n db,server,client -c yellow,green,blue \"npm:db:up\" \"npm:start:server\" \"npm:start:client\"",
    "start:server": "npm --workspace server run start",
    "start:client": "npm --workspace client/transiett-voucher run start",
    "test": "npm --workspace server run test"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
